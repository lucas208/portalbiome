<%- model_class = Individual -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @individual.name %></dd>
  <dt><strong><%= model_class.human_attribute_name("Lattes") %>:</strong></dt>
  <dd><%= @individual.linklattes %></dd>
  <dt><strong><%= model_class.human_attribute_name("Sigaa") %>:</strong></dt>
  <dd><%= @individual.linksigaa %></dd>
  <dt><strong><%= model_class.human_attribute_name("Scholar") %>:</strong></dt>
  <dd><%= @individual.linkscholar %></dd>
  <dt><strong><%= model_class.human_attribute_name("PubMed") %>:</strong></dt>
  <dd><%= @individual.linkpubmed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo) %>:</strong></dt>
  <dd><%= @individual.photo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @individual.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:individualcategory_id) %>:</strong></dt>
  <dd><%= @individual.individualcategory.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              individuals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_individual_path(@individual), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              individual_path(@individual),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
