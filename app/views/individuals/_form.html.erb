<%= form_for @individual, :html => { :class => "form-horizontal individual" } do |f| %>

  <% if @individual.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@individual.errors.count, "error") %> prohibited this individual from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @individual.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label "Lattes", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :linklattes, :class => 'form-control' %>
    </div>
    <%=f.error_span(:linklattes) %>
  </div>
  <div class="form-group">
    <%= f.label "Sigaa", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :linksigaa, :class => 'form-control' %>
    </div>
    <%=f.error_span(:linksigaa) %>
  </div>
  <div class="form-group">
    <%= f.label "Scholar", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :linkscholar, :class => 'form-control' %>
    </div>
    <%=f.error_span(:linkscholar) %>
  </div>
  <div class="form-group">
    <%= f.label "PubMed", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :linkpubmed, :class => 'form-control' %>
    </div>
    <%=f.error_span(:linkpubmed) %>
  </div>
  <div class="form-group">
    <%= f.label :photo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :photo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:photo) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  
  <div class="form-group">
    <%= f.label :individualcategory_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select( :individualcategory_id, Individualcategory.all, :id, :name, prompt: true, :class => 'form-control') %>
    </div>
    <%=f.error_span(:individualcategory_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                individuals_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
