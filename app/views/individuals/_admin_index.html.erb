<%- model_class = Individual -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name("Lattes") %></th>
      <th><%= model_class.human_attribute_name("Sigaa") %></th>
      <th><%= model_class.human_attribute_name("Scholar") %></th>
      <th><%= model_class.human_attribute_name("PubMed") %></th>
      <th><%= model_class.human_attribute_name(:photo) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:individualcategory_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @individuals.each do |individual| %>
      <tr>
        <td><%= link_to individual.id, individual_path(individual) %></td>
        <td><%= individual.name %></td>
        <td><%= (individual.linklattes.blank?) ? 'empty' : 'filled' %></td>
        <td><%= (individual.linksigaa.blank?) ? 'empty' : 'filled' %></td>
        <td><%= (individual.linkscholar.blank?) ? 'empty' : 'filled' %></td>
        <td><%= (individual.linkpubmed.blank?) ? 'empty' : 'filled' %></td>
        <td><%= (individual.photo.blank?) ? 'empty' : 'filled' %></td>
        <td><%= individual.email %></td>
        <td><%= individual.individualcategory.name %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      individual_path(individual), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_individual_path(individual), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      individual_path(individual),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_individual_path,
            :class => 'btn btn-primary' %>
