<%- model_class = Writing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:link) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name("Individuals")%></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @writings.each do |writing| %>
      <tr>
        <td><%= link_to writing.id, writing_path(writing) %></td>
        <td><%= writing.title %></td>
        <td><%= (writing.link.blank?) ? 'empty' : 'filled' %></td>
        <td><%= writing.year %></td>
        <td><%= writing.individuals.count%></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      writing_path(writing), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_writing_path(writing), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      writing_path(writing),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_writing_path,
            :class => 'btn btn-primary' %>
