<%= form_for @writing, :html => { :class => "form-horizontal writing" } do |f| %>

  <% if @writing.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@writing.errors.count, "error") %> prohibited this writing from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @writing.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :link, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :link, :class => 'form-control' %>
    </div>
    <%=f.error_span(:link) %>
  </div>
  <div class="form-group">
    <%= f.label :year, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :year, :class => 'form-control' %>
    </div>
    <%=f.error_span(:year) %>
  </div>

  <div class="form-group">
    <%= f.label :individuals, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= collection_select(:writing, :individual_ids, Individual.all.order(:name), :id, :name, {}, { :multiple => true }) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                writings_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
